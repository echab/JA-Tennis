<UserControl x:Class="JA_Tennis.View.MainFrame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:jv="clr-namespace:JA_Tennis.View"
    xmlns:jvm="clr-namespace:JA_Tennis.ViewModel"
    xmlns:cmd="clr-namespace:JA_Tennis.Command"             
    Width="800" Height="600">
    
    <Grid x:Name="LayoutRoot" Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition MinHeight="200" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Button Content="Load (Prism)" Width="100"
                   cmd:Click.Command="{Binding LoadDocumentCommand}"
            />
            <Button Content="Load (Manager)" Width="100"
                   cmd:CommandManager.EventName="Click"
                   cmd:CommandManager.Command="{Binding LoadDocumentCommand}"
            />
        </StackPanel>
        
        <jv:PlayerListView x:Name="playerListView" Grid.Row="1" Grid.Column="0"/>
        
        <jv:PlayerEditorView x:Name="playerEditorView" Grid.Row="1" Grid.Column="1"/>
        
    </Grid>
</UserControl>
